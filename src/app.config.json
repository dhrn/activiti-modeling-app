{
    "$schema": "../node_modules/@alfresco/adf-core/app.config.schema.json",
    "authType": "OAUTH",
    "providers": "BPM",
    "bpmHost": "http://localhost:4100/api",
    "oauth2": {
        "host": "http://localhost:4100/auth",
        "authPath": "/protocol/openid-connect/token/",
        "clientId": "activiti",
        "scope": "openid",
        "secret": "",
        "implicitFlow": false,
        "silentLogin": false,
        "redirectSilentIframeUri": "",
        "redirectUri": "/",
        "redirectUriLogout": "/#/login"
    },
    "logLevel": "trace",
    "application": {
        "name": "Activiti Modeling Application"
    },
    "languagePicker": true,
    "roles": [
        "ACTIVITI_MODELER"
    ],
    "locale" : "en",
    "languages": [
        {
            "key": "en",
            "label": "English"
        },
        {
            "key": "ja",
            "label": "Japanese"
        }
    ],
    "process-modeler": {
        "priorities": [
            {
                "key": 0,
                "label": "PROCESS_EDITOR.PRIORITIES.LOW"
            },
            {
                "key": 1,
                "label": "PROCESS_EDITOR.PRIORITIES.MEDIUM"
            },
            {
                "key": 2,
                "label": "PROCESS_EDITOR.PRIORITIES.HIGH"
            }
        ],
        "timer-types": [
            {
                "key": "",
                "label": ""
            },
            {
                "key": "cycle",
                "label": "PROCESS_EDITOR.TIMER_TYPES.CYCLE"
            },
            {
                "key": "duration",
                "label": "PROCESS_EDITOR.TIMER_TYPES.DURATION"
            },
            {
                "key": "date",
                "label": "PROCESS_EDITOR.TIMER_TYPES.DATE"
            }

        ]
    },
    "navigation": {
        "main": [
            {
                "icon": "apps",
                "label": "APP.HOME.NAVIGATION.PROJECTS.LABEL",
                "title": "APP.HOME.NAVIGATION.PROJECTS.TOOLTIP",
                "disabled": false,
                "route": {
                    "url": "/dashboard/projects"
                }
            }
        ]
    }
}
